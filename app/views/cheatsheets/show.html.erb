<div class="show-container">
  <div class="category-container">
    <div class="language-icon">
      <% if @cheatsheet.category == 'HTML' %>
        <%= image_tag('HTML5.svg') %>
      <% end %>
      <% if @cheatsheet.category == 'Ruby on Rails' %>
        <%= image_tag('rails.svg') %>
      <% end %>
      <% if @cheatsheet.category == 'CSS' %>
        <%= image_tag('CSS.svg') %>
      <% end %>
      <% if @cheatsheet.category == 'Javascript' %>
        <%= image_tag('javascript.svg') %>
      <% end %>
    </div>
    <p>Published in <strong><%= @cheatsheet.category %></strong></p>
  </div>
  <p>Tags: <span class="tag-view"><%= raw @cheatsheet.tag_list.map { |t| link_to t, tag_path(t) }. join(', ') %></span></p>
  <h1><%= @cheatsheet.title %></h1>
  <%= @cheatsheet.body.html_safe %>

  <div class="crud-links">
    <%= link_to 'Edit', edit_cheatsheet_path, :class => 'button is-primary is-small is-outlined' %>
    <%= link_to 'Delete', @cheatsheet, method: :delete, data: {confirm: 'Wanna delete for sure? ğŸ¤”'}, :class => 'button is-danger is-small is-outlined' %>
  </div>
</div>
