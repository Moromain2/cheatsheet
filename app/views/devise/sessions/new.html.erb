<div class="show-container">
  <div class="columns">
    <div class="column is-4 is-offset-4">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'input' %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", :class => 'input' %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", :class => 'button is-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      <div style="margin-top:30px">
      <p>You have to be signed in to create or modify a cheatsheet</p>
      <p>If there is something you want to say me about one of my posts, please send me an email with the link bellow</p><br>
      <%= mail_to 'mosser.romain@gmail.com', 'Email me', :class => 'button is-primary is-outlined is-small' %>
      </div>
    </div>
  </div>
</div>
