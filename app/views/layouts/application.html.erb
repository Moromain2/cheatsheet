<!DOCTYPE html>
<html>
  <head>
    <title>CheatApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name=viewport content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
  </head>

  <body>
    <div class="top-nav">
      <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'New', new_cheatsheet_path, :class => 'button-new' %></li>
          <li>|</li>
        </ul>
      </nav>
      <%= form_tag(cheatsheets_path, method: :get) do %>
        <div class="search-bar">
          <%= text_field_tag :title, params[:title], class: 'input is-small'  %>
          <%= submit_tag 'Search', name: nil, class: 'button is-small is-primary' %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
